  <!-- Modal -->
  <div class="modal" id="modal">
    <div class="modal-content">
      <h3 id="producto-nombre"></h3>
      <p id="producto-precio"></p>
      <div class="tallas">
        <label for="talla">Elige tu talla:</label>
        <select id="talla">
          <option value="S">S</option>
          <option value="M">M</option>
          <option value="L">L</option>
          <option value="XL">XL</option>
        </select>
      </div>
      <button class="btn" id="confirmar">Confirmar</button>
      <button class="btn" id="cerrar">Cancelar</button>
    </div>
  </div>

  <script>
    const modal = document.getElementById('modal');
    const productoNombre = document.getElementById('producto-nombre');
    const productoPrecio = document.getElementById('producto-precio');
    const tallaSelect = document.getElementById('talla');
    let producto = '';
    let precio = '';

    document.querySelectorAll('.comprar').forEach(boton => {
      boton.addEventListener('click', () => {
        producto = boton.dataset.producto;
        precio = boton.dataset.precio;
        productoNombre.textContent = producto;
        productoPrecio.textContent = "Precio: $" + precio;
        modal.style.display = 'flex';
      });
    });

    document.getElementById('cerrar').addEventListener('click', () => {
      modal.style.display = 'none';
    });

    document.getElementById('confirmar').addEventListener('click', () => {
      const talla = tallaSelect.value;
      const mensaje = `Hola, quiero comprar la ${producto} en talla ${talla} por $${precio}.`;
      const url = `https://wa.me/50588888888?text=${encodeURIComponent(mensaje)}`;
      window.open(url, '_blank');
      modal.style.display = 'none';
    });

    window.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
      }
    });
  </script>

